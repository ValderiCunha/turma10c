package decisao;

import javax.swing.JOptionPane;

public class DesafioComposta {

	public static void main(String[] args) {
		
		String veiculo = JOptionPane.showInputDialog("Informe o veículo");
		byte capacidade = Byte.parseByte(JOptionPane.showInputDialog("Digite a capacidade de passageiros"));
		if (capacidade ==2); {
			System.out.println(veiculo + " Categoria A");
		}else if(capacidade>7) {
			System.out.println(veiculo + " categoria C");
		}else if(capacidade>=4) {
			System.out.println(veiculo + " categoria B");
		}else {
			System.out.println("Categoria Desconhecida");
		}
		
		
		
	}

}

// Peça a entrada de Veiculo, quantidade de Passageiros.
// Exiba a mensagem:
// "Veiculo Categoria A", se a quantidade de passageiros for igual a 2.
// "Veiculo Categoria B", se a quantidade de passageiros estiver entre 4 e 7.
// "Veiculo Categoria C", se a quantidade de passageiros for maior que 7.